/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  
} 
.content{
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.ring{
  display: flex;
  flex-flow: column nowrap;
  /* justify-content: space-around; */
  align-items: center;
  position: fixed
}
.dot{
  width: 16rpx;
  height: 16rpx;
  background: #fff;
  top: -8rpx;
  position: absolute;
}
.dot1{
  transform-origin: center 170rpx;
  animation: rotate 10s infinite linear 
}
.dot2{
  transform-origin: center 208rpx;
  animation: rotate 20s infinite linear ;
}
.dot3{
  transform-origin: center 260rpx;
  animation: rotate 30s infinite linear 
}
@keyframes rotate{
  100%{
    transform: rotate(-360deg)
  }
}
.inner{
  width: 320rpx;
  height: 320rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.7);
  border-radius: 50%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 66rpx
}
.mid{
  width: 400rpx;
  height: 400rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 50%
}
.outer{
  width: 500rpx;
  height: 500rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%
}
.button{
  width: 100%;
  height: 40%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around ;
  align-items: center;
  color: #fff;
  padding-bottom: 60rpx
}
.pause{
  padding: 25rpx 45rpx;
  border: 1rpx solid #fff;
  border-radius: 45rpx;
  font-size: 30rpx
}
.stop{
  padding: 15rpx;
  font-size: 27rpx
}
.mute{
  position: fixed;
  right: 50rpx;
  top: 70rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  padding: 3rpx;
  width: 70rpx;
  height: 70rpx
}
.mute-img{
  width: 66rpx;
  height: 66rpx
}
.star{
  position: fixed;
  height: 100%;
  width: 100%;
  top:0;
  animation: move 20s infinite linear 
}
.star1{
  position: fixed;
  height: 100%;
  width: 100%;
  bottom:-300px;
  animation: move1 20s infinite linear 
}
@keyframes move{
  100%{
    top : -500px
  }
}
@keyframes move1{
  100%{
    bottom:0
  }
}